@{
    ViewData["Title"] = "Home Page";
    string loveIcon = "<svg xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round' class='lucide lucide-heart'><path d='M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z' /></svg>";
}

<style>
    .introduce-wrapper {
        position: relative;
        width: 100%;
    }

    .bg-image {
        width: 100%;
        height: 50vh;
        display: block;
        object-fit: cover;
    }

    .introduce-container {
        position: absolute;
        top: 50%;
        left: 10%;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        width: 80%;
    }

    @@media only screen and (max-width: 900px) {
        .bg-image {
            height: 70vh;
        }

        .introduce-container {
            left: 50%;
            transform: translate(-50%, -50%);
        }
    }

    .viewLink {
        color: white;
        font-weight: bold;
    }

    .card-container {
        position: relative;
    }

    .btn-love {
        position: absolute;
        top: 10px;
        right: 10px;
        z-index: 10;
        opacity: 0;
        transition: opacity 0.3s ease, transform 0.3s ease;
    }

    .card-container:hover .btn-love {
        opacity: 1;
        transform: scale(1.1);
    }

    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card-container:hover .card {
        transform: translateY(-10px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }

    .card-img-top {
        transition: transform 0.3s ease;
    }

    .card-container:hover .card-img-top {
        transform: scale(1.05);
    }

    .btn-circle {
        width: 50px;
        height: 50px;
        border-radius: 100px;
        display: flex;
        justify-content: center;
        align-items: center;
    }
</style>

@* Introduce Section *@
<div class="introduce-wrapper">
    <img src="~/image/bookstore-backdrop.jpg" class="bg-image" style="filter:brightness(50%)" />
    <div class="introduce-container text-white">
        <div style="font-size: 30px">Read, more, often</div>
        <div style="font-size:50px; font-weight:bold">Paperbacks in Hoa Lac</div>
        <div style="display:flex; gap:10px">
            <a class="viewLink" href="#container01">Visit Store</a>
            <a class="viewLink" href="#">Custom Order</a>
            <a class="viewLink" href="#">Submit a Book Review</a>
        </div>
    </div>
</div>

@* What's Good? *@
<div class="fs-1 text-center w-100 text-primary mt-4 fw-bold">What's Good?</div>
<div id="container01">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-4 gap-3 mt-2" style="display: flex; justify-content:center">
        @foreach (BookStore.Models.Book b in ViewBag.Books)
        {
            <div class="col card-container">
                <button class="btn btn-outline-danger btn-love btn-circle" onclick="redirectToWishlist(@b.BookId)">
                    @Html.Raw(loveIcon)
                </button>
                <div class="card h-100 border-0" style="width: 18rem;">
                    <div style="overflow: hidden;">
                        <img src="@b.Image" class="card-img-top" alt="...">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@b.Title</h5>
                        <p class="card-text">@b.Author</p>
                        <p class="">@b.Price ₫</p>
                        <a asp-action="BookDetail" asp-controller="Books" asp-route-id="@b.BookId" class="btn btn-primary">Read More</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@* New Arrivals *@
<div class="fs-1 text-center w-100 text-primary mt-4 fw-bold">New Arrivals</div>
<div id="container01">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-4 gap-3 mt-2" style="display: flex; justify-content:center">
        @foreach (BookStore.Models.Book b in ViewBag.ListBooksNewArivall)
        {
            <div class="col card-container">
                <button class="btn btn-outline-danger btn-love btn-circle" onclick="redirectToWishlist(@b.BookId)">
                    @Html.Raw(loveIcon)
                </button>
                <div class="card h-100 border-0" style="width: 18rem;">
                    <div style="overflow: hidden;">
                        <img src="@b.Image" class="card-img-top" alt="...">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@b.Title</h5>
                        <p class="card-text">@b.Author</p>
                        <p class="">@b.Price ₫</p>
                        <a href="#" class="btn btn-primary">Read More</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div style="display:flex; justify-content:center; margin:10px">
    <button class="btn btn-outline-primary fs-5">Load More</button>
</div>


<script>
    function redirectToWishlist(bookId) {
        $.ajax({
            url: "/Wishlist/AddToWishlist",
            type: "POST",
            data: { bookId: bookId },
            success: function (response) {
                if (response.success) {
                    window.location.href = "/Wishlist/Index"; 
                } else {
                    alert(response.message);
                }
            },
            error: function () {
                alert("An error occurred while adding book to wishlist.");
            }
        });
    }
</script>

