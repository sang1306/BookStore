@{
	ViewData["Title"] = "Home Page";
	string loveIcon = "<svg xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round' class='lucide lucide-heart'><path d='M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z' /></svg>";
}

<link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />

@* introduce *@
<div class="introduce-wrapper">
	<img src="~/image/bookstore-backdrop.jpg" class="bg-image" style="filter:brightness(50%)" />
	<div class="introduce-container  ">
		<div class="text-white" style="font-size: 30px">Read, more, often</div>
		<div class=" text-white" style="font-size:50px; font-weight:bold">Paperbacks in Hoa Lac</div>
		<div class="" style="display:flex; gap:10px">
			<a class="viewLink" href="#container01">visit store</a>
			<a class="viewLink" href="#">custom order</a>
			<a class="viewLink" href="#">submit a book review</a>
		</div>
	</div>
</div>
@* What's Good? *@

<div class="fs-1 text-center w-100 text-primary mt-4 text-center fw-bold">What's Good?</div>
<div id="container01">
	<div class="row row-cols-1 row-cols-sm-2 row-cols-md-4  g-4 gap-3 mt-2"
		 style="display: flex; justify-content:center">
		@* @for (int i = 1; i <= 6; i++) *@
		@foreach (BookStore.Models.Book b in ViewBag.Books)
		{
			<div class="col card-container">
				<button class="btn btn-outline-danger btn-love z-3 btn-circle" data-bookid="@b.BookId" onclick="addToWishList(@b.BookId)">
					@Html.Raw(loveIcon)
				</button>

				<div class="card h-100 border-0" style="width: 18rem;">
					<div style="overflow: hidden;">
						<img src="@b.Image" class="card-img-top z-0" alt="...">
					</div>
					<div class="card-body">
						<h5 class="card-title">@b.Title</h5>
						<p class="card-text">@b.Author</p>
						<p class="">@b.Price ₫</p>
						<a asp-action="BookDetail" asp-controller="Books" asp-route-id="@b.BookId" class="btn btn-primary">Read More</a>
					</div>
				</div>
			</div>
		}
	</div>
</div>
@* New Arrivals *@
<div class="fs-1 text-center w-100 text-primary mt-4 text-center fw-bold">New Arrivals</div>
<div id="container01">
	<div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 row-cols-lg-4 g-4 gap-3 mt-2"
		 style="display: flex; justify-content:center ">

		@foreach (BookStore.Models.Book b in ViewBag.ListBooksNewArivall)
		{
			<div class="col card-container">
				<button class="btn btn-outline-danger btn-love z-3  btn-circle">
					@Html.Raw(loveIcon)
				</button>
				<div class="card h-100 border-0" style="width: 18rem;">
					<div style="overflow: hidden;">
						<img src="@b.Image" class="card-img-top z-0" alt="...">
					</div>
					<div class="card-body">
						<h5 class="card-title">@b.Title</h5>
						<p class="card-text">@b.Author</p>
						<p class="">@b.Price ₫</p>
						<a asp-action="BookDetail" asp-controller="Books" asp-route-id="@b.BookId" class="btn btn-primary">Read More</a>
					</div>
				</div>
			</div>
		}
	</div>
</div>
<div style="display:flex; justify-content:center; margin:10px">
	<button class=" btn btn-outline-primary  fs-5">
		Load More
	</button>
</div>




