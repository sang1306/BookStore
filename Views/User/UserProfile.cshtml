@model BookStore.Models.User

@{
    ViewData["Title"] = "User Profile";
}

<h2>User Profile</h2>

@if (Model != null)
{
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">@Model.Username</h4>
            <p class="card-text"><strong>Email:</strong> @Model.Email</p>
            <p class="card-text"><strong>Full Name:</strong> @Model.Username</p>
            <p class="card-text"><strong>Address:</strong> @Model.Address</p>
            <p class="card-text"><strong>Phone:</strong> @Model.Status</p>
        </div>
    </div>

    <a asp-action="EditProfile" asp-route-id="@Model.UserId" class="btn btn-primary">Edit Profile</a>
}
else
{
    <h3>User not found</h3>
}
