@model BookStore.Models.User

@{
    ViewData["Title"] = "Delete";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="col-md-6 card p-4 shadow mt-3 mb-3">
        <h1 class="text-center text-danger">Delete User</h1>
        <hr />
        <h4 class="text-center">Are you sure you want to delete this user?</h4>

        <dl class="row mt-3">
            <dt class="col-sm-4 fw-bold">Username:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Username)</dd>

            <dt class="col-sm-4 fw-bold">Password:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Password)</dd>

            <dt class="col-sm-4 fw-bold">Email:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

            <dt class="col-sm-4 fw-bold">Preferences:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Preferences)</dd>

            <dt class="col-sm-4 fw-bold">Created At:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.CreateAt)</dd>

            <dt class="col-sm-4 fw-bold">Address:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Address)</dd>

            <dt class="col-sm-4 fw-bold">Status:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Status)</dd>

            <dt class="col-sm-4 fw-bold">Role:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.RoleNavigation.RoleId)</dd>
        </dl>

        <form asp-action="Delete" class="text-center">
            <input type="hidden" asp-for="UserId" />
            <button type="submit" class="btn btn-danger px-4">Delete</button>
            <a asp-action="Index" class="btn btn-secondary px-4 ms-2">Cancel</a>
        </form>
    </div>
</div>
