<style>
	/* Base styles for sidebar */
	.sidebar-trigger {
		position: fixed;
		left: 0;
		top: 0;
		width: 6.6vw;
		height: 100vh;
		z-index: 1000;
	}

	.sidebar {
		position: fixed;
		left: -250px; /* Hidden initially */
		top: 0;
		width: 250px;
		height: 100vh;
		background-color: rgba(50, 56, 29, 0.8); /* Green with 60% opacity */
		backdrop-filter: blur(8px);
		-webkit-backdrop-filter: blur(8px);
		color: white;
		transition: left 0.3s ease-in-out;
		z-index: 1100;
		padding-top: 20px;
		box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
		border-right: 1px solid rgba(255, 255, 255, 0.1);
	}

		/* Show sidebar on hover */
		.sidebar-trigger:hover + .sidebar,
		.sidebar:hover {
			left: 0;
		}

	/* Navigation styles */
	.sidebar-header {
		padding: 0 20px 20px;
		border-bottom: 1px solid rgba(255, 255, 255, 0.1);
		margin-bottom: 15px;
	}

	.sidebar-nav {
		list-style-type: none;
		padding: 0 10px;
		margin: 0;
	}

	.nav-item {
		margin-bottom: 5px;
	}

	.nav-link {
		display: flex;
		align-items: center;
		padding: 12px 15px;
		color: rgba(255, 255, 255, 0.9);
		text-decoration: none;
		border-radius: 6px;
		transition: all 0.2s ease;
	}

		.nav-link:hover {
			background-color: rgba(255, 255, 255, 0.15);
			color: white;
		}

		.nav-link i {
			margin-right: 10px;
			width: 20px;
			text-align: center;
		}

	/* Dropdown styling */
	.dropdown-menu {
		background-color: rgba(35, 150, 60, 0.8);
		backdrop-filter: blur(8px);
		-webkit-backdrop-filter: blur(8px);
		border: 1px solid rgba(255, 255, 255, 0.1);
		padding: 8px;
		border-radius: 6px;
		margin-top: 5px;
		box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
	}

	.dropdown-item {
		color: white;
		padding: 8px 12px;
		border-radius: 4px;
		text-decoration: none;
		display: block;
	}

		.dropdown-item:hover {
			background-color: rgba(255, 255, 255, 0.15);
		}

	/* Teams section */
	.teams-section {
		padding: 15px 20px;
		margin-top: 20px;
		border-top: 1px solid rgba(255, 255, 255, 0.1);
	}

	.team-item {
		display: flex;
		align-items: center;
		padding: 8px 0;
	}

	.team-avatar {
		width: 28px;
		height: 28px;
		border-radius: 6px;
		display: flex;
		align-items: center;
		justify-content: center;
		margin-right: 12px;
		font-weight: 500;
		background-color: rgba(255, 255, 255, 0.2);
	}

	/* User profile */
	.user-profile {
		position: absolute;
		bottom: 0;
		width: 100%;
		padding: 15px 20px;
		display: flex;
		align-items: center;
		border-top: 1px solid rgba(255, 255, 255, 0.1);
	}

	.user-avatar {
		width: 36px;
		height: 36px;
		border-radius: 50%;
		margin-right: 12px;
		object-fit: cover;
	}

	.user-info {
