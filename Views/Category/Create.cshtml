@model BookStore.Models.Category

@{
    ViewData["Title"] = "Add Category";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="col-md-6 card p-4 shadow mt-3 mb-3">
        <h1 class="text-center">Add Category</h1>
        <hr />
        <form asp-action="AddCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>

            <div class="form-group text-center mt-3">
                <input type="submit" value="Create" class="btn btn-primary px-4" />
                <a asp-action="Index" class="btn btn-secondary px-4 ms-2">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
