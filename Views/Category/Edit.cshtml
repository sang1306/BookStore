@model BookStore.Models.Category

@{
    ViewData["Title"] = "Edit";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="col-md-6 card p-4 shadow mt-4">
        <h1 class="text-center">Edit Category</h1>
        <hr />
        <form asp-action="EditCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoryId" />

            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>

            <div class="form-group text-center mt-3">
                <input type="submit" value="Save" class="btn btn-primary px-4" />
                <a asp-action="Index" class="btn btn-secondary px-4 ms-2">Back</a>
            </div>
        </form>
    </div>
</div>

<!-- Đưa nút "Back to List" ra giữa -->
<div class="d-flex justify-content-center mt-3">
    <a asp-action="Index" class="btn btn-link">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}