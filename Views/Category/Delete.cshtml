@model BookStore.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="col-md-6 card p-4 shadow mt-3 mb-3">
        <h1 class="text-center text-danger">Delete Category</h1>
        <hr />
        <h4 class="text-center">Are you sure you want to delete this category?</h4>

        <dl class="row mt-3">
            <dt class="col-sm-4 fw-bold">Category Name:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.CategoryName)</dd>
        </dl>

        <form asp-action="DeleteCategory" class="text-center">
            <input type="hidden" asp-for="CategoryId" />
            <button type="submit" class="btn btn-danger px-4">Delete</button>
            <a asp-action="Index" class="btn btn-secondary px-4 ms-2">Cancel</a>
        </form>
    </div>
</div>
